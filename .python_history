# Python Example: Reading Entities
# Filterable fields: title, genre, mood, tempo, duration, melody_data, status
import requests
def make_api_request(api_path, method='GET', data=None):
        url = f'https://app.base44.com/api/{api_path}'
            headers = {
                    'api_key': '18977838cc4f437e95d6c996cea5bd82',
                            'Content-Type': 'application/json'
                                }
                                    if method.upper() == 'GET':
                                                    response = requests.request(method, url, headers=headers, params=data)
                                                        else:
                                                                        response = requests.request(method, url, headers=headers, json=data)
                                                                            response.raise_for_status()
                                                                                return response.json()
                                                                                
entities = make_api_request(f'apps/694979ffeec2598fb196c11e/entities/Song')
print(entities)
